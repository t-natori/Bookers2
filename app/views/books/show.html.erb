<div class="container">
    <div class="row">
        <div class="col-md-3">
            
            <%= render 'list', book: @book %>
        
        </div>
        <div class="col-md-9" style="background-color: skyblue;">
            <h1>Book detail</h1>
            <table>
                <tbody>
                    <%= @books.each do |book| %>
                    <tr>
                        <td></td>
                        <td><%= link_to 'book.title', book_path(book.id) %></td>
                        <td><%= book.body %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>

             
             
        </div>
    </div>
</div>