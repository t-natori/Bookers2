<div class="container">
    <div class="row">
        <div class="col-md-3">
            
            <%= render 'users/info', user: @user %>
            <%= render 'list', book: @book %>
        
        </div>
        <div class="col-md-8 offset-md-1">
            <h1>Book detail</h1>
            <table>
                <tbody>
                    <tr>
                        <td>
                            <%= link_to user_path(@books.user_id) do %>
                                <%= image_tag @books.user.get_profile_image(100,100) %><br>
                                <%= @books.user.name %>
                            <% end %>
                        </td>
                        <td><%= link_to @books.title, book_path(@books.id) %></td>
                        <td><%= @books.body %></td>
                        <% if @books.user == current_user %>
                          <td><%= link_to 'Edit', edit_book_path(@books.id) %></td>
                          <td><%= link_to 'Destroy', destroy_book_path, method: :delete, "data-confirm" => "本当に消しますか？" %></td>
                        <% end %>
                    </tr>
                </tbody>
            </table>

             
             
        </div>
    </div>
</div>