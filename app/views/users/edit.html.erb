<h1>Users info</h1>
<% if @user.errors.any? %>
   <%= @user.errors.count %>件のエラーが発生しました
   <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
   </ul>
<% end %>

<%= form_with model: @user, url: update_user_path(@user.id), method: :patch do |f| %>

    <label for="inputName">Name</label><br>
    <%= f.text_field :name, autofocus: true %><br>

    <label for="inputImage">Image</label><br>
    <%= f.file_field :profile_image, accept: "image/*" %><br>

    <label for="inputIntroduction">Introduction</label><br>
    <%= f.text_area :introduction %><br>

    <%= f.submit 'Update User' %>

<% end %>
