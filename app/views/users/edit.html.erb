<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
            <h2>Users info</h2>
            <%= form_with model: @user, url: update_user_path(@user.id), method: :patch do |f| %>
            
                <div id="error_explanation">
                <% if @user.errors.any? %>
                   <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
                   <ul>
                        <% @user.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                   </ul>
                <% end %>
                </div>
                
                <div class="form-group">
                    <div class="field_with_errors">
                       <label for="user_Name">Name</label><br> 
                    </div>
                    <div class="fiels_with_errors">
                        <%= f.text_field :name, autofocus: true, class:"form-control name", id:"user_name" %><br>
                    </div>
                </div>
                <div class="form-group">
                    <label for="user_Image">Image</label><br>
                    <%= f.file_field :profile_image, accept: "image/*", class:"form-control-file user_image", id:"user_profile_image" %><br>
                </div>
                <div class="form-group">
                    <label for="user_Introduction">Introduction</label><br>
                    <%= f.text_area :introduction, class:"form-control introduction", id:"user_introduction" %><br>
                </div>
                <div class="form-group">
                    <%= f.submit 'Update User', class:"btn btn-secondary" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
