<div class="container">
    <div class="row">
        <div class="col-md-3">
            
            <%= render 'info', user: @user %>
            <%= render 'books/list', book: @book %>

        </div>
        <div class="col-md-9">
            <h1>Users</h1>
            <table>
                <tbody>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                    </tr>
                    <% @users.each do |user| %>
                    <tr>
                        <td><%= image_tag user.get_profile_image(100,100) %></td>
                        <td><%= user.name %></td>
                        <td><%= link_to 'Show', user_path(user.id) %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            
            

        </div>
    </div>
</div>