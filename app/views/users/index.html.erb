<div class="container">
    <div class="row">
        <div class="col-md-3">
            
            <%= render 'books/list', book: @book, user: @user %>

        </div>
        <div class="col-md-9">
            <h1>Users</h1>
            <table>
                <tbody>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                    </tr>
                    <tr>
                        <% @users.each do |user| %>
                        <td><%= user.profile_image %></td>
                        <td><%= user.name %></td>
                        <td><%= link_to 'Show', user_path(user.id) %></td>
                        <% end %>
                    </tr>
                </tbody>
            </table>
            
            

        </div>
    </div>
</div>