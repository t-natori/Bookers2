
<div class="container">
    <div class="row">
        <div class="col-md-3">
            
            <%= render 'info', user: @user %>
            <%= render 'books/list', book: @book %>

        </div>
        <div class="col-md-9">
            <h1>Books</h1>
            <table>
                <tbody>
                    <% @books.each do |book| %>
                    <tr>
                        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
                        <td><%= book.title %></td>
                        <td><%= book.body %></td>
                        <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
                        <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>