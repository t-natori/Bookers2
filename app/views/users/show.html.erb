
<div class="container">
    <div class="row">
        <div class="col-md-3">
            
            <%= render 'books/list', book: @book %>

        </div>
        <div class="col-md-9">
            <h1>Books</h1>
            <table>
                <tbody>
                    <% @books.each do |book| %>
                    <tr>
                        <td>image</td>
                        <td><%= link_to 'book.id', book_path(book.id) %></td>
                        <td><%= body.id %></td>
                        <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
                        <td><%= line 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>