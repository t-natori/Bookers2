
<div class="container">
    <div class="row">
        <div class="col-md-3">
            
            <%= render 'info', user: @user %>
            <%= render 'books/list', book: @book %>

        </div>
        <div class="col-md-9">
            <h1>Books</h1>
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                    <tr>
                        <td>
                            <%= link_to user_path(book.user_id) do %>
                                <%= image_tag book.user.get_profile_image(100,100) %>
                            <% end %>
                        </td>
                        <td><%= link_to book.title, book_path(book.id) %></td>
                        <td><%= book.body %></td>

                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>